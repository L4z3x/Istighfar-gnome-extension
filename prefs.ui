<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkBox" id="prefs_box">
    <property name="orientation">vertical</property>
    <property name="spacing">10</property>
    <child>
      <object class="GtkSpinButton" id="duration_spin">
        <property name="adjustment">
          <object class="GtkAdjustment">
            <property name="lower">10</property> <!-- Min 10s -->
            <property name="upper">600</property> <!-- Max 10 mins -->
            <property name="step_increment">5</property>
          </object>
        </property>
        <property name="tooltip-text">Set duration between reminders (in seconds)</property>
      </object>
    </child>

    <child>
      <object class="GtkSwitch" id="dark_mode_switch">
        <property name="active">false</property>
        <property name="tooltip-text">Enable Dark Mode</property>
      </object>
    </child>
  </object>
</interface>
